<div class="container">
  <div class="row">
    <h1 class="text-center">Login Or Register</h1>
  </div>
  <div class="row">
    {{!-- Login Form --}}
    <div class="col">
      <div>
        <h2 class="text-center form-titles p-2 rounded-top">Login</h2>
      </div>
      <form class="border border-top-0 p-2 rounded-bottom" action="" id='loginForm'>
        <div class="mb-3">
          <label for="loginUsername" class="form-label">Username</label>
          <input type="text" class="form-control" id="loginUsername" placeholder="ILoveParties">
        </div>
        <div class="mb-3">
          <label for="loginPassword" class="form-label">Password</label>
          <input type="password" class="form-control" id="loginPassword" placeholder="ILoveParties">
        </div>
      </form>
    </div>
    {{!-- Register Form --}}
    <div class="col">
      <div>
        <h2 class="text-center form-titles p-2 rounded-top">Register</h2>
      </div>
      <form action="" id='registerFrom' class="border border-top-0 p-2 rounded-bottom">
        <div class="mb-3">
          <div class="mb-3">
            <label for="registerEmail" class="form-label">Enter your Email Address</label>
            <input type="text" class="form-control" id="registerEmail" placeholder="you@example.com">
          </div>
          <label for="registerUsername" class="form-label">Pick a Username</label>
          <input type="text" class="form-control" id="registerUsername" placeholder="MyNewUsername">
        </div>
        <div class="mb-3">
          <label for="registerPassword" class="form-label">Type a Password</label>
          <input type="password" class="form-control" id="registerPassword" placeholder="easy2remember">
        </div>
      </form>
    </div>

  </div>

</div>